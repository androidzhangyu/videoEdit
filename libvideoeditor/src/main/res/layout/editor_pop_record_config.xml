<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="900px"
    android:layout_height="wrap_content"
    android:background="@drawable/editor_bg_record_config_pop"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:text="setting"
        android:textColor="#A9A5A2"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:background="#797776" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="Frame"
            android:textColor="#A9A5A2"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/icon_16_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/icon_1_1"
            android:layout_marginEnd="19dp"
            android:layout_marginRight="15dp"
            android:paddingBottom="4dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="4dp"
            android:scaleType="centerInside"
            android:src="@drawable/editor_bg_icon_16_9" />

        <ImageView
            android:id="@+id/icon_1_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="2dp"
            android:layout_toLeftOf="@id/icon_16_9"
            android:paddingBottom="4dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="4dp"
            android:scaleType="centerInside"
            android:src="@drawable/editor_bg_icon_1_1" />

        <ImageView
            android:id="@+id/icon_9_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="2dp"
            android:layout_toLeftOf="@id/icon_1_1"
            android:paddingBottom="4dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="4dp"
            android:scaleType="centerInside"
            android:src="@drawable/editor_bg_icon_9_16" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#797776" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <RelativeLayout
            android:id="@+id/rl_dur_status"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="duration"
                android:textColor="#A9A5A2"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/iv_dur_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:scaleType="centerInside"
                android:src="@mipmap/editor_icon_setting_arrow" />

            <TextView
                android:id="@+id/tv_dur_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/iv_dur_arrow"
                android:text="10s"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_dur_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="invisible">


            <TextView
                android:id="@+id/tv_dur_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="10s"
                android:textColor="@color/editor_color_tv_record_config"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_dur_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="20s"
                android:textColor="@color/editor_color_tv_record_config"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_dur_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="30s"
                android:textColor="@color/editor_color_tv_record_config"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_dur_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="60s"
                android:textColor="@color/editor_color_tv_record_config"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_dur_5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="2min"
                android:textColor="@color/editor_color_tv_record_config"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_dur_6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="3min"
                android:textColor="@color/editor_color_tv_record_config"
                android:textSize="12sp" />

        </LinearLayout>
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#797776" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="10dp">

        <RelativeLayout
            android:id="@+id/rl_seg_status"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="Section number"
                android:textColor="#A9A5A2"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/iv_segment_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:scaleType="centerInside"
                android:src="@mipmap/editor_icon_setting_arrow" />

            <TextView
                android:id="@+id/tv_seg_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/iv_segment_arrow"
                android:text="3"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_seg_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="invisible">


            <TextView
                android:id="@+id/tv_seg_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/editor_color_tv_record_config"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_seg_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/editor_color_tv_record_config"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_seg_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/editor_color_tv_record_config"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_seg_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/editor_color_tv_record_config"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_seg_5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/editor_color_tv_record_config"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_seg_any"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="free"
                android:textColor="@color/editor_color_tv_record_config"
                android:textSize="12sp" />

        </LinearLayout>
    </FrameLayout>
</LinearLayout>